<!DOCTYPE html>
<html>
<head>
  <title>element nvc-project spike</title>
</head>

<body>

  <%- include('header') -%>

  <h1>Needs</h1>
  <ul>
    <% needs.forEach(function(need) { %>
      <li>
        <%= `${need.name}: ${need.description} (${need._id.getTimestamp().toLocaleDateString()})` %>
      </li>
    <% }); %>
  </ul>

  <form action="/need" method="post">
    <div>
      <label>
        Name:<br>
        <input type="text" name="name">
      </label>
    </div>

    <div>
      <label>
        Description:<br>
        <textarea name="description">
        </textarea>
      </label>
    </div>

    <div>
      <input type="submit" value="Save"/>
    </div>
  </form>
</body>
</html>
